{{!< default}}
<section id="container" class="sub-page">
	<div class="wrap-container zerogrid">
		<div class="crumbs">
			<ul>
				<li><a href="/">首页</a></li>
				<li><a href="/blog">博客</a></li>
			</ul>
		</div>
		<div id="main-content" class="col-2-3">
			<div class="wrap-content">
				{{# each data.posts.results}}
				<article>
					<div class="art-header">
						<a href="{{postUrl slug}}"><h3>{{{title}}}</h3></a>
						<div class="info">{{{categoryList categories prefix="分类: "}}}
							{{#if author.name.first}}作者: {{author.name.first}}{{/if}}</div>
					</div>
					<div class="art-content">
						{{#if image}}<img src="{{{handleImgShow image.filename}}}">{{/if}}
						<p>{{{content.brief}}}</p>
					</div>
					{{#if content.extended}}<a class="button button02" href="{{postUrl slug}}">更多</a>{{/if}}
				</article>
				{{/each}}
			</div>
			{{>pagination}}
		</div>
		<div id="sidebar" class="col-1-3">
			<div class="wrap-sidebar">
				<!---- Start Widget ---->
				<div class="widget wid-about">
					<div class="wid-header">
						<h5>关于我们</h5>
					</div>
					<div class="wid-content">
						<img src="images/15.jpg"/>
						<p>关于我们介绍介绍介绍介绍介绍介绍介绍介绍介绍</p>
					</div>
				</div>
				<!---- Start Widget ---->
				<div class="widget wid-post">
					<div class="wid-header">
						<h5>最新文章</h5>
					</div>
					<div class="wid-content">
						{{# each data.latestPosts}}
						<div class="post">
							<a href="{{postUrl slug}}"><img src="{{{handleImgShow image.filename}}}"/></a>
							<div class="wrapper">
								<h5><a href="#">{{{title}}}</a></h5>
								<span>{{#if author.name.first}}作者: {{author.name.first}}{{/if}}</span>
							</div>
						</div>
						{{/each}}
					</div>
				</div>
				<!---- Start Widget ---->
				<div class="widget wid-tag">
					<div class="wid-header">
						<h5>分类</h5>
					</div>
					<div class="wid-content">
						{{# each data.categories }}
							<a href="{{categoryUrl key}}">{{name}} &nbsp;&nbsp;&nbsp;</a>
						{{/each}}
					</div>
				</div>
