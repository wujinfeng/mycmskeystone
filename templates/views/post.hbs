{{!< default}}
<section id="container" class="sub-page">
	<div class="wrap-container zerogrid">
		<div class="crumbs">
			<ul>
				<li><a href="/">首页</a></li>
				<li><a href="/blog">博客</a></li>
			</ul>
		</div>
		<div id="main-content" class="col-2-3">
			<div class="wrap-content">
				<article>
					<p><a href="/blog">&larr; 返回</a></p>
					<div class="art-header">
						<h3>{{data.post.title}}</h3>
						<div class="info">
							{{{categoryList data.post.categories prefix="分类: "}}}
							{{#if data.post.author.name.first}}作者: {{data.post.author.name.first}}{{/if}}
						</div>
					</div>
					<div class="art-content">
						{{#if data.post.image}}<img src="{{{handleImgShow data.post.image.filename}}}">{{/if}}
						{{{data.post.content.extended}}}
					</div>
				</article>
			</div>
		</div>
		<div id="sidebar" class="col-1-3">
			<div class="wrap-sidebar">
				<!---- Start Widget ---->
				<div class="widget wid-about">
					<div class="wid-header">
						<h5>关于我们</h5>
					</div>
					<div class="wid-content">
						<img src="/images/15.jpg"/>
						<p>
						在天愿作比翼鸟，在地就要吃烧烤；<br/>
						春花秋月何时了，往事都在吃烧烤；<br/>
						天若有情天亦老，人间正道吃烧烤！<br/>
						一个人撸串，撸的是心情；<br/>
						两个人撸串，撸的是默契；<br/>
						三个人撸串，撸的是江湖。<br/>
						</p>
					</div>
				</div>
				<!---- Start Widget ---->
				
				<div class="widget wid-post">
					<div class="wid-header">
						<h5>最新文章</h5>
					</div>
					<div class="wid-content">
						{{# each data.posts}}
						<div class="post">
							<a href="{{postUrl slug}}">{{#if image}}<img src="{{{handleImgShow image.filename}}}">{{/if}}</a>
							<div class="wrapper">
								<h5><a href="{{postUrl slug}}">{{{title}}}</a></h5>
								<span>{{#if author.name.first}}作者: {{author.name.first}}{{/if}}</span>
							</div>
						</div>
						{{/each}}
					</div>
				</div>
				<!---- Start Widget ---->
				<div class="widget wid-tag">
					<div class="wid-header">
						<h5>分类</h5>
					</div>
					<div class="wid-content">
						{{# each data.categories }}
							<a href="{{categoryUrl key}}">{{name}} &nbsp;&nbsp;&nbsp;</a>
						{{/each}}
					</div>
				</div>
				<!---- Start Widget ---->
